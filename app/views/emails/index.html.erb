<%- model_class = Email -%>
<!-- <div class="page-header">
  <h3><%=t '.title', :default => Email %></h3>
</div> -->
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:reference_id) %></th> 
      <th>Voted</th>      

    </tr>
  </thead>
  <tbody>
    <% @emails.each do |email| %>
      <tr>
        <td><%= email.id %></td>
        <td>
          <%= link_to email_path(email), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
          <%= email.reference_id %></td>
          <%- end -%> 
          
          <td>
            <% if current_user.voted_for? email %>
                <%= image_tag "tick.png", size: "20x20", alt: "attachment" %>
            <% else %>
                <!--<%= image_tag "cross.png", size: "20x20", alt: "attachment" %>-->
            <%- end -%>
          </td>        


      </tr>
    <% end %>
  </tbody>
</table>


<%= will_paginate @posts %>