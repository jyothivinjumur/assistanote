<%- model_class = Email -%>



<ul class="nav nav-tabs" >
  <li role="presentation"><a href="<%= emails_path %>">
    <%= image_tag "umdlogo.jpeg", width:"30%", height: "30%" %></a></li>
  <!--<li role="presentation" class="active"><a href="#"> <%= @email.reference_id.sub(".txt","")%>  </a></li>-->



      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          <%= image_tag "attachment.png", size: "20x20", alt: "attachment" %>
          Attachments (<%= @email.attachments.count%>)
          <span class="caret"></span></a>
        <ul class="dropdown-menu">

          <% counter = 1 %>
          <% @email.attachments.each do |attachment| %>
              <li>
                <%= link_to attachment_path(attachment), :class =>  'btn btn-default' do %>
                    <%= "Attachment-#{counter}" %>
                    <% counter = counter+1 %>
                <%- end -%>
              </li>
          <% end %>
        </ul>
      </li>


  <div class="btn-group" role="group" style="width:100%; position: fixed; nav-right: 20px;" >
    <div class="btn-group" role="group" style="margin-right: 1%; margin-left: 5%; ">

      <% if get_vote_status(current_user, @email) == "privilege" %>
        <%= button_to " Priviledged ", like_email_path(@email), :class => "btn btn-danger"%>
      <% else %>
        <%= button_to " Priviledged ", like_email_path(@email), :class => "btn btn-primary"%>
      <% end %>
    </div>

    <div class="btn-group" role="group" style="margin-right: 1%; ">
      <% if get_vote_status(current_user, @email) == "notprivilege" %>
          <%= button_to " Not Priviledged ", dislike_email_path(@email), :class => "btn btn-success "%>
      <% else %>
          <%= button_to " Not Priviledged ", dislike_email_path(@email), :class => "btn btn-primary "%>
      <% end %>
    </div>
    <div class="btn-group" role="group">

      <% if get_vote_status(current_user, @email) == "dontknow" %>
        <%= button_to " No Decision ", dontknow_email_path(@email), :class => "btn btn-warning"%>
      <% else %>
        <%= button_to " No Decision ", dontknow_email_path(@email), :class => "btn btn-primary"%>
      <% end %>
    </div>
  </div>

</ul>



<% if current_user["user_type"] == "RECIPIENT" %>

    <div class="container">
      <div class="row">
        <div >
          <div class="fieldset">
            <div class="email-text">
              <%=  readfile.html_safe %>
            </div>
          </div>
        </div>


        <div class='row-fluid'>
          <div class=" panel" id="graphContainer" data-series="<%= gethistory %>"
               data-dt="<%= getdate %>" style="min-width: 310px; height: 300px; margin: 0 auto" >
          </div>

        </div>
      </div>
      <div text-align="center"> * The above graph plots Privilege propensity </div>
    </div>

<% else %>
    <div class="container">
      <div class="row">
        <div >
          <div class="fieldset_attachement">
            <div class="email-text">
              <%=  @email.content.gsub(/\n/, '<br/>').html_safe %>
            </div>
          </div>
        </div>
      </div>
    </div>
<% end %>






