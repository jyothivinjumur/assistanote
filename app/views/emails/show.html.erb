<%- model_class = Email -%>
<div class="page-header">
  <h1><%=t '.title', :default => Email %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:reference_id) %></dt>
      <dd><pre class="prettyprint"><%= @email.reference_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:path) %></dt>
      <dd><pre class="prettyprint"><%= @email.path %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              emails_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_email_path(@email), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              email_path(@email),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

