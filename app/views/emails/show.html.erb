<div class="container">
  <div class="row">
    <div class="col-sm-8 blog-main">
        <table>
            <% if @email.attachments.count > 0 %>
                <% @email.attachments.each do |attachment| %>
                    <tr><td>
                      <%= image_tag "attachment.png", size: "20x20", alt: "attachment" %>
                      <%= link_to attachment_path(attachment), :class => 'btn btn-default' do %>
                          <%= attachment.reference_id %>
                      <%- end -%>
                    </td>
                    </tr>
                <% end %>
            <% end %>
        </table>

        <div class="fieldset">
            <div class="text-muted">
                <%=  readfile.html_safe %>
            </div>
        </div>
    </div>

    <div class="col-sm-3 col-sm-offset-1 blog-sidebar">
      <div id="sticker" class="sidebar-module sidebar-module-inset">
            <%= button_to " Priviledged ", like_email_path(@email), :class => "btn btn-info"%>
            <%= button_to " Not Priviledged ", dislike_email_path(@email), :class => "btn btn-info "%>
            <%= pie_chart Vote.group(:voter_id).count %>
      </div>
    </div>

  </div>
</div>








